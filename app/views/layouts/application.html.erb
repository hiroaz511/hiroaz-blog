<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="alert alert-success text-center">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <nav class="navbar navbar-expand-md nabbar-light bg-white sticky-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img src="/logo2.png" id="logo"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
          <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
              <ul class="navbar-nav ml-auto">
                <%if session[:user_id] %>
                  <li class="nav-item nav-link"><%= @current_user.name %></li>
                  <li class="nav-item nav-link"><%= link_to '投稿一覧', articles_path, class: 'text-dark' %></li>
                  <li class="nav-item nav-link"><%= link_to '新規投稿', new_article_path, class: 'text-dark'  %></li>
                  <li class="nav-item nav-link"><%= link_to 'ユーザー一覧', users_index_path, class: 'text-dark'  %></li>
                  <li class="nav-item nav-link"><%= link_to 'ログアウト', logout_path, class: 'text-dark'  %></li>
                <% else %>
                  <li class="nav-item nav-link"><%= link_to '新規登録', signup_path, class: 'text-dark'  %></li>
                  <li class="nav-item nav-link"><%= link_to 'ログイン', login_path, class: 'text-dark'  %></li>
                <% end %>
               </ul>
            </div>

      </div>
    </nav>
    <%= yield %>
  </body>
</html>

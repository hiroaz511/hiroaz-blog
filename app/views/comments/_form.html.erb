
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p class="text-center">
    <%= form.label :ユーザー %><br>
    <%= form.text_field :commenter %>
  </p>
  <p class="text-center">
    <%= form.label :コメント %><br>
    <%= form.text_area :body %>
  </p>
  <p class="text-center">
    <%= form.submit %>
  </p>
<% end %>
<body>
  <div class="container-sub">
    <h1 class="text-center text-dark pt-3">投稿一覧</h1>

      <table class="m-3">
        <tr>
          <th class="text-dark text-center font-size-5">User Name</th>
          <th class="text-dark text-center font-size-5">Title</th>
          <th class="text-dark text-center">Body</th>
          <th colspan="3"></th>
        </tr>



      <% @articles.each do |article| %>
        <div>
          <tr class="border text-dark bg-light">
            <td class="border-right"><%= article.user%></td>
            <td class="border-right"><%= link_to article.title, article_path(article) %></td>
            <td class="border-right w-50"><%= time_ago_in_words(article.created_at) %> ago (<%= article.created_at.strftime('%Y/%m/%d %H:%M') %>)<br><%= article.text %></td>
            <td class="border-right text-center"><%= link_to '編集', edit_article_path(article) %></td>
            <td class="text-center"><%= link_to '削除', article_path(article),
                            method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </div>
      <% end %>
      </table>
  </div>
</body>

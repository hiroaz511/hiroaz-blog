<div class="text-center container-sub pt-2 pb-3">
<h1 class="text-center">編集</h1>

<%= form_with model: @article, local: true do |form| %>
  <% if @article.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@article.errors.count, "error") %> prohibited
      this article from being saved:</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div class="text-center">
    <p class="mt-4">
      <%= form.label :タイトル %><br>
      <input class="form-control z-depth-1 col-xs-12 col-md-8 col-lg-7 mx-auto" name="title" value ="<%= @article.title %>"></input>
    </p>

    <p class="mt-5">
      <%= form.label :本文 %><br>
      <textarea class="form-control z-depth-1 col-xs-12 col-md-8 col-lg-7 mx-auto" rows="3" placeholder="<%= @article.text %>" name="text"></textarea>
    </p>

    <div class="mx-auto text-center mt-4 mb-4">
      <%= form.submit :投稿, class: "btn btn-warning" %>
    </div>
  </div>
<% end %>
	<div>
	<%= link_to '戻る', articles_path, class: "btn btn-secondary" %>
	</div>
</div>
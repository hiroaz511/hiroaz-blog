      <div class="container-sub text-center text-dark bg-info">
        <h1 class="pt-3">新規ユーザー登録</h1>
      	<% @user.errors.full_messages.each do |message| %>
          <div>
            <%= message %>
          </div>
        <% end %>

      	<%= form_tag("/users/create") do %>
	        <p>ユーザー名</p>
	        <!-- <input>タグを用いて1行の入力フォーム -->
	        <input name="name" value="<%= @user.name %>">

	        <p>メールアドレス</p>
	        <!-- <input>タグを用いて1行の入力フォーム -->
	        <input name="email" value="<%= @user.email %>">

          <p>パスワード</p>
          <input type="password" name="password" value="<%= @user.password %>"><br>

	        <input type="submit" value="新規登録" class="mt-3">
	    <% end %>
      </div>
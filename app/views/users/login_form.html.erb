<div class="container-sub text-center text-dark">
  <h4 class="pt-3">ログイン</h4>
      <div>
        <% if @error_message %>
          <div class="text-danger">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/login") do %>
          <p class="mt-3">メールアドレス</p>
          <input name="email" value="<%= @email %>">
          <p class="mt-3">パスワード</p>
          <input type="password" name="password" value="<%= @password %>"><br>
          <input type="submit" value="ログイン" class="mt-3 btn btn-primary">
        <% end %>
       </div>
</div>